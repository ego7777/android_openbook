<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp">

    <TextView
        android:id="@+id/admin_receipt_dialog_item_menuName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="메뉴 이름"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/black"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/admin_receipt_dialog_item_menuCount"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"/>

    <TextView
        android:id="@+id/admin_receipt_dialog_item_menuCount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="개수"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/black"


        app:layout_constraintStart_toEndOf="@id/admin_receipt_dialog_item_menuName"
        app:layout_constraintEnd_toStartOf="@id/admin_receipt_dialog_item_menuPrice"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        />

    <TextView
        android:id="@+id/admin_receipt_dialog_item_menuPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="가격"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/black"


        app:layout_constraintStart_toEndOf="@id/admin_receipt_dialog_item_menuCount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"/>



</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/include"
        layout="@layout/appbar_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/black">

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/admin_sales_chart"
            android:layout_width="700dp"
            android:layout_height="400dp"
            android:layout_margin="40dp"
            android:background="@color/white"/>


        <LinearLayout
            android:id="@+id/admin_sales_sidebar"
            android:layout_width="200dp"
            android:layout_height="500dp"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:gravity="center">


            <TextView
                android:id="@+id/admin_sales_sidebar_day"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:autoSizeMaxTextSize="25sp"
                android:autoSizeTextType="uniform"
                android:background="@color/light_green"
                android:gravity="center"
                android:text="Day"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/admin_sales_sidebar_week"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:autoSizeMaxTextSize="25sp"
                android:autoSizeTextType="uniform"
                android:background="@color/light_green"
                android:gravity="center"
                android:text="Week"
                android:textColor="@color/black"
                android:textStyle="bold" />



            <TextView
                android:id="@+id/admin_sales_sidebar_month"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:autoSizeMaxTextSize="25sp"
                android:autoSizeTextType="uniform"
                android:background="@color/light_green"
                android:gravity="center"
                android:text="Month"
                android:textColor="@color/black"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/admin_sales_sidebar_year"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:autoSizeMaxTextSize="25sp"
                android:autoSizeTextType="uniform"
                android:background="@color/light_green"
                android:gravity="center"
                android:text="Year"
                android:textColor="@color/black"
                android:textStyle="bold" />




        </LinearLayout>

    </LinearLayout>






</LinearLayout>
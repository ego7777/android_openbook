<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="1000dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="900dp"
            android:layout_height="wrap_content"
            android:background="@color/red_pink"
            android:text="테이블 추가/삭제"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="30sp"
            android:padding="20dp"/>

        <TextView
            android:id="@+id/admin_modify_table_cancel"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@color/red_pink"
            android:text="X"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="30sp"
            android:padding="20dp"/>

    </LinearLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[ 현재 테이블 개수 ]"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        android:padding="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="기본으로 설정되어 있는 테이블 개수는 20개 입니다."
        android:textSize="15sp"
        android:textStyle="bold"
        android:padding="20dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/admin_modify_table_plus_btn"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/button_round_darkgray"/>


        <TextView
            android:id="@+id/admin_modify_table_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            android:padding="30dp"
            android:gravity="center"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/admin_modify_table_minus_btn"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="-"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/button_round_darkgray"/>


    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/admin_modify_table_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="수정하기"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:background="@drawable/radius_50dp"
        android:padding="20dp"
        android:backgroundTint="@color/flower_pink"
        android:layout_marginBottom="30dp"/>


</LinearLayout>
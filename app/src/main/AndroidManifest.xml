<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.openbook"
    android:installLocation="preferExternal">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>


    <application
        android:name="com.example.openbook.MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Openbook"
        android:usesCleartextTraffic="true"
        tools:targetApi="31"
        android:windowSoftInputMode="adjustUnspecified|adjustPan"
        android:hardwareAccelerated="false"
        android:largeHeap="true"
        android:vmSafeMode="true">

        <service android:name="com.example.openbook.FCM.FCM"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

        <activity
            android:name="com.example.openbook.startActivity.StartActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

<!--        <activity android:name=".startActivity.Login" />-->
        <activity android:name="com.example.openbook.startActivity.SignUp"/>
        <activity android:name="com.example.openbook.Activity.PaymentSelect"/>
        <activity android:name="com.example.openbook.Activity.Menu" />

        <activity android:name="com.example.openbook.Activity.Table"
            android:exported="true">
            <intent-filter>
                <action android:name="tableInformationArrived"/>
            </intent-filter>
        </activity>


        <activity android:name="com.example.openbook.Activity.CallServer" />

        <activity android:name="com.example.openbook.Chatting.ChattingUI"
            android:exported="true">
            <intent-filter>
                <action android:name="chattingDataArrived"/>
            </intent-filter>
            <intent-filter>
                <action android:name="SendChattingData"/>
            </intent-filter>
            <intent-filter>
                <action android:name="isReadArrived"/>
            </intent-filter>
        </activity>

        <activity android:name="com.example.openbook.Activity.PopUpChatting"
            android:theme="@android:style/Theme.Dialog"/>

        <activity android:name="com.example.openbook.Activity.PopUpProfile"
            android:theme="@android:style/Theme.Dialog"/>

        <activity android:name="com.example.openbook.Activity.PopUpGift"
            android:theme="@android:style/Theme.Dialog"/>

        <activity android:name="com.example.openbook.Activity.AdminModifyTableQuantity"
            android:theme="@android:style/Theme.Dialog"/>

        <activity android:name="com.example.openbook.Activity.AdminModifyMenu"
            android:theme="@android:style/Theme.Dialog"/>

        <activity android:name="com.example.openbook.Activity.AdminPaymentAfterPopup"
            android:theme="@android:style/Theme.Dialog"/>

        <activity android:name="com.example.openbook.Activity.AdminPaymentBeforePopup"
            android:theme="@android:style/Theme.Dialog"/>

        <activity android:name="com.example.openbook.Activity.AdminSales"/>

        <activity android:name="com.example.openbook.Activity.Admin"/>
        <activity android:name="com.example.openbook.KakaoPay"/>


    </application>

</manifest>